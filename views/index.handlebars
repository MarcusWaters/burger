<h1>Burger Time!</h1>
<br>

    <h2>Burgers Available to Eat:</h2>
    <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Devour It!</button>
            </form>
        </li>
        {{/unless}} {{/each}}
    </ul>

    <h2>Burgers That Have Been Devoured: </h2>
    <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
            {{this.id}}. {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
    </ul>

    <form class="create-update-form" action="/burgers/create" method="POST">
        <div class="form-group">
            <input type="text" id="dab" name="burger_name">
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>